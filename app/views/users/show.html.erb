<div class="container mt-4">
  <div class="info-btn">
    <%= link_to 'Edit my profile', edit_user_registration_path, class:"btn-white mb-3 d-inline-block" %>
    <%= link_to 'Add a teacher', new_teacher_path, class:"btn-green mb-3 d-inline-block" %>
  </div>

  <h1 class="text-center">My profile</h1>
  <% if @teachers.length > 0 %>
  <h2>My <%= @teachers.length %> teachers</h2>
  <% end %>
  <div class="cards">
    <%= render "/teachers/cards_teachers" %>
  </div>

  <h2>My appointments</h2>
  <div class="cards">
    <%= render "/appointments/cards_appointments" %>
  </div>

</div>
