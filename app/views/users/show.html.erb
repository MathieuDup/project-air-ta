<div class="container mt-4">
  <h1 class="text-center">My profil</h1>
  <h2>My teachers</h2>
  <div class="cards">
    <% @teachers.each do |teacher| %>
        <div class="card-product">
          <%= link_to teacher_path(teacher) do %>
            <%= image_tag (teacher.photo.attached? ? cl_image_path(teacher.photo.key) : asset_path("jim.jpg")), class: "avatar-bordered"%>
            <div class="card-product-infos">
              <div class="card-product-infos-primary">
                <h2><%= teacher.name %></h2>
                <h3>0 appoint.</h3>
              </div>
              <div class="card-product-infos-secondary">
                <p><%= teacher.location %></p>
                <p><%= teacher.language %></p>
                <p><%= teacher.price.to_i %> €</p>
              </div>
            </div>
        <% end %>
          <div class ="card-buttons">
            <%= link_to '', edit_teacher_path(teacher), class:"fa-solid fa-pen-to-square" %>
            <%= link_to '', teacher_path(teacher), method: :delete, data: { confirm: "Are you sure?" }, class:"fa-solid fa-trash" %>
          </div>
        </div>
    <% end %>
  </div>

