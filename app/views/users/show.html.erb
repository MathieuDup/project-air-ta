<div class="container">
  <div class="row mt-5">
  <% if @user.photo.attached?  %>
    <%= cl_image_tag @user.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
  <%= link_to "Add a new teacher", new_teacher_path %>
    <% @user.teachers.each do |teacher| %>
      <div class="col-4">
      <%# need to replace url with cloudinary link for teacher picture on line 6 %>

        <div class="card-product">
          <%=link_to teacher_path(teacher), class: "text-decoration-none" do %>
          <%= image_tag (teacher.photo.attached? ? cl_image_path(teacher.photo.key) : asset_path("jim.jpg")) %>
            <div class="card-product-infos">
              <h2><%= teacher.name %></h2>
              <p>0 appointment</p>
              <p><%= teacher.location %></p>
              <p><%= teacher.language %></p>
              <p><%= teacher.price %></p>
          <%end%>
            <%= link_to "Edit", edit_teacher_path(teacher) %>
            <%= link_to "Delete", teacher_path(teacher), method: :delete, data: { confirm: "Are you sure?" }, class: "card-remove-link" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
