<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%=asset_path("banner.jpg")%>);">
  <div class="container">
    <h1 class="mb-2">Book your TA with <strong>good style </strong><i class="fa-solid fa-thumbs-up"></i></h1>
    <%= form_tag teachers_path, method: :get do %>
    <div class="d-flex">
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a super star !"
      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="main-container">
    <div class="cards cards-on-index">
      <%= render "cards_teachers" %>
    </div>
    <div id="map-on-index" data-controller="mapbox"
      data-mapbox-markers-value="<%= @markers.to_json %>"
      data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
