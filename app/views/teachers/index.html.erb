<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%=asset_path("banner.jpg")%>);">
  <div class="container">
    <h1>Book your TA with <strong>good style </strong><i class="fa-solid fa-thumbs-up"></i></h1>
    <p>One day, one TA</p>
    <%= link_to "Search the good one", root_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="container">
<div class="cards">
  <% @teachers.each do |teacher| %>
      <div class="card-product">
        <%= link_to teacher_path(teacher) do %>
          <%= image_tag (teacher.photo.attached? ? cl_image_path(teacher.photo.key) : asset_path("jim.jpg")), class: "avatar-bordered"%>
          <div class="card-product-infos">
            <div class="card-product-infos-primary">
              <h2><%= teacher.name %></h2>
              <h3>0 appoint.</h3>
            </div>
            <div class="card-product-infos-secondary">
              <p><%= teacher.location %></p>
              <p>
                  <% teacher.languages.each do |language| %>
                    <%= language.name %>
                  <% end %>
              </p>
              <p><%= teacher.price.to_i %> â‚¬</p>
            </div>
          </div>
        <% end %>
        <div class ="card-buttons">
          <%= link_to '', edit_teacher_path(teacher), class:"fa-solid fa-pen-to-square" %>
          <%= link_to '', teacher_path(teacher), method: :delete, data: { confirm: "Are you sure?" }, class:"fa-solid fa-trash" %>
        </div>
      </div>
  <% end %>
</div>
</div>
